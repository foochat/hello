<?xml version='1.0' encoding='utf-8'?>
<widget id="com.numediart.voixdesanges" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Voix des Anges</name>
    <description>
        Geolocation dependent audio streaming
    </description>
    <author email="antonin.puleo@umons.ac.be">
        Antonin Puleo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.GeoBroker" />
        <param name="ios-package" value="CDVLocation" />
    </feature>
    <plugins>
        <plugin name="Device" value="CDVDevice" />
        <plugin name="Compass" value="CDVLocation" />
        <plugin name="NetworkStatus" value="CDVConnection" />
        <plugin name="Geolocation" value="CDVLocation" />
    </plugins>
    
</widget>
